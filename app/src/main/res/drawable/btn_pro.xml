<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape>

            <gradient
                android:shadowColor="#848484"
                android:shadowRadius="5"
                android:shadowDx="3"
                android:shadowDy="4"
                android:startColor="#ccefec"
                android:centerColor="#a6e3de"
                android:endColor="#81D8D0"
                android:angle="45" />
            <stroke
                android:width="2dp"
                android:color="#47c6ba" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#49c6b4" />
            <stroke
                android:width="2dp"
                android:color="#338a7d" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_selected ="true">
        <shape>
            <solid
                android:shadowColor="#848484"
                android:shadowRadius="5"
                android:shadowDx="3"
                android:shadowDy="4"
                android:color="#3a9e90" />
            <stroke
                android:width="2dp"
                android:color="#338a7d" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>


</selector>