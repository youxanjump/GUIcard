<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/white">

    <TextView
        android:id="@+id/title"
        android:text="Choose the specialities which do you want another person has."
        android:textSize="25sp"
        android:textColor="#440d18"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/WT1"
        android:text="Wanted Specialities"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_alignBottom="@+id/WS"
        android:layout_alignParentEnd="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:stretchColumns="*"
        android:layout_alignTop="@+id/WT1"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <CheckBox
                android:id="@+id/CB1"
                android:text="木吉他"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_pro"
                android:button="@drawable/check_pro"/>

            <CheckBox
                android:id="@+id/CB2"
                android:text="演奏"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_pro"
                android:button="@drawable/check_pro"/>

            <CheckBox
                android:id="@+id/CB3"
                android:text="貝斯"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_pro"
                android:button="@drawable/check_pro" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <CheckBox
                android:id="@+id/CB4"
                android:text="電吉他"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_pro"
                android:button="@drawable/check_pro"/>

            <CheckBox
                android:id="@+id/CB5"
                android:text="演唱"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_pro"
                android:button="@drawable/check_pro"/>

            <CheckBox
                android:id="@+id/CB6"
                android:text="鼓組"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_pro"
                android:button="@drawable/check_pro"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <CheckBox
                android:id="@+id/CB7"
                android:text="鋼琴"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_pro"
                android:button="@drawable/check_pro"/>

            <CheckBox
                android:id="@+id/CB8"
                android:text="創作"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_pro"
                android:button="@drawable/check_pro"/>

            <CheckBox
                android:id="@+id/CB9"
                android:text="其他"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_pro"
                android:button="@drawable/check_pro"/>
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/WS"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/guitar"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/title"
        android:layout_alignStart="@+id/title" />

    <TextView
        android:id="@+id/OK"
        android:text="OK"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/MYINFOR"
        android:background="@drawable/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/OK" />
</RelativeLayout>