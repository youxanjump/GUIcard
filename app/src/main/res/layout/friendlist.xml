<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ground"
    tools:context="com.example.user.guicard.Friendlist">

    <TextView
        android:id="@+id/OK"
        android:text="ADD"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/myInformationView"
        android:background="@drawable/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/beAdded"
        android:background="@drawable/icon"
        android:layout_alignTop="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

    <TextView
        android:text="MyInformation"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MYINFORTEXT"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/myInformationView"/>

    <TextView
        android:id="@+id/title"
        android:text="Friend List"
        android:textSize="50sp"
        android:textColor="#440d18"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/OK" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/music1"
        android:layout_marginTop="93dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/beAdded"
        android:layout_alignStart="@+id/beAdded" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/music2"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/music3"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/music5"
        android:id="@+id/imageView9"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/music4"
        android:layout_alignTop="@+id/imageView9"
        android:layout_alignStart="@+id/imageView" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/music6"
        android:id="@+id/imageView10"
        android:layout_alignTop="@+id/imageView9"
        android:layout_toEndOf="@+id/imageView9" />

    <Button
        android:id="@+id/ADD"
        android:background="@drawable/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageView9"
        android:layout_marginStart="25dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignTop="@+id/imageView"
        android:columnCount="3"
        android:rowCount="4"
        android:layout_centerHorizontal="true"
        android:alignmentMode="alignBounds"
        android:id="@+id/imageLayout"
        android:paddingBottom="50dp"
        android:padding="50dp"
        android:paddingEnd="50dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingStart="50dp"
        android:paddingTop="50dp"
        android:layout_margin="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="fill_horizontal">


    </GridLayout>


</RelativeLayout>