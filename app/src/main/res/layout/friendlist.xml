<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/ground">

    <TextView
        android:id="@+id/title"
        android:text="Friend List"
        android:textSize="50sp"
        android:textColor="#440d18"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/common_full_open_on_phone"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_marginStart="17dp" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/common_full_open_on_phone"
        android:layout_alignTop="@+id/image"
        android:layout_alignEnd="@+id/title"
        android:layout_marginEnd="12dp" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/common_full_open_on_phone"
        android:layout_below="@+id/image"
        android:layout_alignStart="@+id/image"
        android:layout_marginTop="28dp" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/common_full_open_on_phone"
        android:layout_alignTop="@+id/image2"
        android:layout_alignStart="@+id/image1"
        android:layout_marginTop="12dp" />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/common_full_open_on_phone"
        android:layout_below="@+id/image3"
        android:layout_alignStart="@+id/image2"
        android:layout_marginTop="23dp" />

    <ImageView
        android:id="@+id/image5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/common_full_open_on_phone"
        android:layout_alignTop="@+id/image4"
        android:layout_alignStart="@+id/image3" />

    <TextView
        android:id="@+id/OK"
        android:text="ADD"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/next"
        android:background="@drawable/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/OK" />


</RelativeLayout>