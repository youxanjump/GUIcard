<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ground"
    tools:context="com.example.user.guicard.Friendlist">

    <TextView
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#230015"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignEnd="@+id/title"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="26dp"
        android:id="@+id/time" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/time"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:background="@drawable/music5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:layout_margin="15dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:background="@drawable/music4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/image5"
            android:layout_alignStart="@+id/image"
            android:layout_margin="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:background="@drawable/music3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/image1"
            android:layout_alignStart="@+id/OK"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:background="@drawable/music6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/image4"
            android:layout_alignStart="@+id/image2"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:background="@drawable/music2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/image"
            android:layout_toStartOf="@+id/next1"
            android:layout_marginEnd="15dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:background="@drawable/music1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@+id/title"
            android:layout_toStartOf="@+id/image4"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="15dp" />
    </GridLayout>

    <Button
        android:id="@+id/MYINFOR"
        android:background="@drawable/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/MYINFOR" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/INVITED"
        android:background="@drawable/icon"
        android:layout_alignTop="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/title"
        android:text="Friend List"
        android:textSize="50sp"
        android:textColor="#440d18"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/INVITED"
        android:layout_marginStart="31dp" />

    <TextView
        android:text="MyInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MYINFORTEXT"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/MYINFOR"
        android:textSize="18sp" />

    <Button
        android:id="@+id/ok"
        android:background="@drawable/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/time" />

    <TextView
        android:id="@+id/OK"
        android:text="ADD"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/time" />


</RelativeLayout>