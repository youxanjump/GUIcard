<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/ground">

    <TextView
        android:id="@+id/OK"
        android:text="ADD"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/next"
        android:background="@drawable/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/OK" />

    <TextView
        android:id="@+id/title"
        android:text="Friend List"
        android:textSize="50sp"
        android:textColor="#440d18"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/image3"
        android:background="@drawable/music4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/image5"
        android:layout_alignStart="@+id/image" />

    <ImageView
        android:id="@+id/image4"
        android:background="@drawable/music5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/image1"
        android:layout_alignStart="@+id/image1" />

    <ImageView
        android:id="@+id/image1"
        android:background="@drawable/music2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/image"
        android:layout_toStartOf="@+id/next"
        android:layout_marginEnd="12dp" />

    <ImageView
        android:id="@+id/image2"
        android:background="@drawable/music3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/image1"
        android:layout_alignStart="@+id/next" />

    <ImageView
        android:id="@+id/image5"
        android:background="@drawable/music6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/image4"
        android:layout_alignStart="@+id/image2" />

    <ImageView
        android:id="@+id/image"
        android:background="@drawable/music1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/title"
        android:layout_toStartOf="@+id/image4" />

    <TextView
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#230015"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignEnd="@+id/title"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="26dp"
        android:id="@+id/time" />


</RelativeLayout>