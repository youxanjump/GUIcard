<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.guicard.SignUp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Account"
        android:ems="10"
        android:id="@+id/Account"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Password"
        android:ems="10"
        android:id="@+id/Password"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/Account"
        android:layout_alignStart="@+id/Account" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/Name"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/Password"
        android:layout_alignStart="@+id/Password" />

    <CheckBox
        android:text="木吉他"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gender"
        android:layout_alignStart="@+id/Log"
        android:layout_marginStart="20dp"
        android:id="@+id/a1" />

    <CheckBox
        android:text="電吉他"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a2"
        android:layout_below="@+id/a1"
        android:layout_alignStart="@+id/a1" />

    <CheckBox
        android:text="貝斯"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a3"
        android:layout_below="@+id/a2"
        android:layout_alignStart="@+id/a2" />

    <CheckBox
        android:text="鍵盤"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a4"
        android:layout_below="@+id/a3"
        android:layout_alignStart="@+id/a3" />

    <CheckBox
        android:text="鼓組"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a5"
        android:layout_below="@+id/a4"
        android:layout_alignStart="@+id/a4" />

    <CheckBox
        android:text="演唱"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a6"
        android:layout_below="@+id/a5"
        android:layout_alignStart="@+id/a5" />

    <CheckBox
        android:text="演奏"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/a1"
        android:layout_toEndOf="@+id/a1"
        android:id="@+id/a7" />

    <CheckBox
        android:text="創作"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a7"
        android:layout_toEndOf="@+id/a2"
        android:id="@+id/a8" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gender"
        android:layout_marginTop="18dp"
        android:weightSum="1"
        android:layout_below="@+id/Name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp">


        <RadioButton
            android:text="Man"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:id="@+id/man"
            android:layout_alignTop="@+id/gender"
            android:layout_toEndOf="@+id/take_image"
            android:layout_marginTop="10dp" />

        <RadioButton
        android:text="Woman"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
            android:id="@+id/woman"
            android:layout_alignBottom="@+id/man"
            android:layout_toEndOf="@+id/man"
            android:layout_marginStart="19dp" />

    </RadioGroup>

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/next" />

</RelativeLayout>
