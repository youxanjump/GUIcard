<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/OK"
        android:text="LogIn"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/next"
        android:background="@drawable/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/OK" />

    <ImageView
        android:id="@+id/pic"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:srcCompat="@drawable/pic"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/back"
        android:background="@drawable/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/back1"
        android:text="Back"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/back" />


    <android.support.design.widget.TextInputLayout
        style="@style/Line"
        android:id="@+id/Account1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextInputHint"
        android:layout_alignBottom="@+id/NameG"
        android:layout_alignEnd="@+id/next">

        <EditText
            android:id="@+id/Account"
            android:hint="Password"
            android:textSize="30sp"
            android:ems="50"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="300dp"
            android:inputType="textPassword|textCapSentences"
            android:layout_centerHorizontal="true" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/Line"
        android:id="@+id/Name1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextInputHint"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/Account1">

        <EditText
            android:id="@+id/Name"
            android:hint="Account"
            android:textSize="30sp"
            android:ems="20"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="300dp"
            android:inputType="text"
            android:layout_centerHorizontal="true" />

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/AccountG"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/guitar"
        android:layout_above="@+id/NameG"
        android:layout_toStartOf="@+id/Account1" />

    <ImageView
        android:id="@+id/NameG"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/guitar"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/Name1"
        android:layout_toStartOf="@+id/Account1" />


</RelativeLayout>